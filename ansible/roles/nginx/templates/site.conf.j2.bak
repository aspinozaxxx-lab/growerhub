server {
    listen 80;
    listen [::]:80;
    server_name {{ nginx_domain }}{% for d in nginx_alt_domains %} {{ d }}{% endfor %};

    # ACME http-01 должен идти выше любых редиректов/проксей
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
        default_type "text/plain";
        try_files $uri =404;
        access_log off;
        log_not_found off;
    }

    {% if nginx_enable_https and nginx_cert_ready %}
    # Редиректим на HTTPS ТОЛЬКО когда сертификат уже есть
    return 301 https://$host$request_uri;
    {% else %}
    # Пока сертификата нет — обслуживаем сайт/прокси на 80 без редиректа
    root {{ nginx_static_root | default('/var/www/html') }};
    index {{ nginx_index | default('index.html') }};

    # API → FastAPI backend
    location ^~ /api/ {
        proxy_pass {{ nginx_backend_api | default('http://127.0.0.1:8000') }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 300;
        client_max_body_size 20m;
    }

    # Статика/SPA
    location / {
        try_files $uri $uri/ /{{ nginx_index | default('index.html') }};
    }
    {% endif %}

    access_log /var/log/nginx/{{ nginx_domain }}_access.log;
    error_log  /var/log/nginx/{{ nginx_domain }}_error.log;
}

{% if nginx_enable_https and nginx_cert_ready %}
# HTTPS (443) включаем только когда cert уже получен
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ nginx_domain }}{% for d in nginx_alt_domains %} {{ d }}{% endfor %};

    ssl_certificate     /etc/letsencrypt/live/{{ nginx_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ nginx_domain }}/privkey.pem;

    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options SAMEORIGIN;
    add_header Referrer-Policy strict-origin-when-cross-origin;

    # ACME и по HTTPS
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
        default_type "text/plain";
        try_files $uri =404;
        access_log off;
        log_not_found off;
    }

    # API → FastAPI backend
    location ^~ /api/ {
        proxy_pass {{ nginx_backend_api | default('http://127.0.0.1:8000') }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 300;
        client_max_body_size 20m;
    }

    root {{ nginx_static_root | default('/var/www/html') }};
    index {{ nginx_index | default('index.html') }};

    location / {
        try_files $uri $uri/ /{{ nginx_index | default('index.html') }};
    }

    access_log /var/log/nginx/{{ nginx_domain }}_ssl_access.log;
    error_log  /var/log/nginx/{{ nginx_domain }}_ssl_error.log;
}
{% endif %}

