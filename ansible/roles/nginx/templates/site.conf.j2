server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name growerhub.ru www.growerhub.ru;

    ssl_certificate     /etc/letsencrypt/live/growerhub.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/growerhub.ru/privkey.pem;

    # Безопасные заголовки
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options SAMEORIGIN;
    add_header Referrer-Policy strict-origin-when-cross-origin;

    # ACME для продления
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
        default_type "text/plain";
        try_files $uri =404;
        access_log off;
        log_not_found off;
    }

    # API → FastAPI
    location ^~ /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 300;
        client_max_body_size 20m;
    }

    # Swagger/Docs
    location = /docs {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 300;
    }

    # ReDoc — вот это добавляем
    location = /redoc {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 300;
    }

    # Схема OpenAPI — нужна и для /docs, и для /redoc
    location = /openapi.json {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 300;
    }

    # === СТАТИКА как на 80 ===
    root /home/watering-admin/growerhub/static;  # если ты уже перенёс статику в /var/www/growerhub — укажи тот путь
    index index.html;

    # Если у тебя есть API/бэкенд — временно НЕ проксируем (источник 500/502).
    # location ^~ /api/ { proxy_pass http://127.0.0.1:8000; ... }
    # location = /docs { proxy_pass http://127.0.0.1:8000; ... }

    location / {
        try_files $uri $uri/ /index.html;
    }

    access_log /var/log/nginx/growerhub.ru_ssl_access.log;
    error_log  /var/log/nginx/growerhub.ru_ssl_error.log;
}

